<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MentorUI.ViewModels"
        xmlns:models="using:Mentor.Core.Models"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
        x:Class="MentorUI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Mentor - Game Screenshot Analysis"
        Width="900" Height="700"
        MinWidth="700" MinHeight="500">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" Margin="20">
        <!-- Input Section -->
        <Border Grid.Row="0" 
                BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20"
                Margin="0,0,0,20">
            <StackPanel Spacing="15">
                <TextBlock Text="Screenshot Analysis" 
                          FontSize="20" 
                          FontWeight="Bold"/>

                <!-- Image Selection -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Screenshot Image:" FontWeight="SemiBold"/>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBox Grid.Column="0" 
                                Text="{Binding ImagePath}"
                                Watermark="Select an image file..."
                                IsReadOnly="True"
                                Margin="0,0,10,0"/>
                        <Button Grid.Column="1" 
                               Content="Browse..."
                               Click="OnBrowseClick"
                               MinWidth="100"/>
                    </Grid>
                </StackPanel>

                <!-- Prompt Input -->
                <StackPanel Spacing="8">
                    <TextBlock Text="Analysis Prompt:" FontWeight="SemiBold"/>
                    <TextBox Text="{Binding Prompt}"
                            Watermark="What should I do next?"
                            AcceptsReturn="True"
                            MinHeight="60"
                            TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Provider Selection -->
                <StackPanel Spacing="8">
                    <TextBlock Text="LLM Provider:" FontWeight="SemiBold"/>
                    <ComboBox ItemsSource="{Binding Providers}"
                             SelectedItem="{Binding SelectedProvider}"
                             MinWidth="200"
                             HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- Analyze Button -->
                <Button Content="Analyze Screenshot"
                       Command="{Binding AnalyzeCommand}"
                       HorizontalAlignment="Stretch"
                       HorizontalContentAlignment="Center"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Height="40"/>

                <!-- Progress Indicator -->
                <StackPanel IsVisible="{Binding IsAnalyzing}" 
                           Orientation="Horizontal" 
                           Spacing="10"
                           HorizontalAlignment="Center">
                    <TextBlock Text="Analyzing..." FontStyle="Italic"/>
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                </StackPanel>

                <!-- Error Message -->
                <Border IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                       Background="#FFFFE0E0"
                       BorderBrush="#FFFF0000"
                       BorderThickness="1"
                       CornerRadius="4"
                       Padding="10">
                    <TextBlock Text="{Binding ErrorMessage}" 
                              Foreground="#FFCC0000"
                              TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </Border>

        <!-- Results Section -->
        <Border Grid.Row="1"
                IsVisible="{Binding Result, Converter={x:Static ObjectConverters.IsNotNull}}"
                BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="20">
            <ScrollViewer>
                <StackPanel Spacing="15">
                    <TextBlock Text="Analysis Results" 
                              FontSize="20" 
                              FontWeight="Bold"/>

                    <!-- Metadata -->
                    <StackPanel Spacing="5">
                    <TextBlock>
                        <Run Text="Provider: " FontWeight="SemiBold"/>
                        <Run Text="{Binding Result.ProviderUsed}"/>
                    </TextBlock>
                    <TextBlock>
                        <Run Text="Confidence: " FontWeight="SemiBold"/>
                        <Run Text="{Binding Result.Confidence, StringFormat=P0}"/>
                    </TextBlock>
                        <TextBlock>
                            <Run Text="Generated: " FontWeight="SemiBold" />
                            <Run Text="{Binding Result.GeneratedAtFormatted}" />
                        </TextBlock>
                    </StackPanel>

                    <Separator/>

                    <!-- Summary -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Summary"
                                  FontSize="16"
                                  FontWeight="Bold"/>
                        <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                               BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}"
                               BorderThickness="1"
                               CornerRadius="4"
                               Padding="15">
                            <TextBlock Text="{Binding Result.Summary}"
                                      TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>

                    <!-- Analysis -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Detailed Analysis"
                                  FontSize="16"
                                  FontWeight="Bold"/>
                        <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                               BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}"
                               BorderThickness="1"
                               CornerRadius="4"
                               Padding="15">
                            <TextBlock Text="{Binding Result.Analysis}"
                                      TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>

                    <!-- Recommendations -->
                     <StackPanel Spacing="8">
                        <TextBlock Text="Recommendations" 
                                  FontSize="16" 
                                  FontWeight="Bold"/>
                        <ItemsControl ItemsSource="{Binding Result.Recommendations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:RecommendationItem">
                                    <Border Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
                                           BorderBrush="{DynamicResource SystemControlHighlightBaseMediumLowBrush}"
                                           BorderThickness="1"
                                           CornerRadius="4"
                                           Padding="15"
                                           Margin="0,0,0,10">
                                        <StackPanel Spacing="8">
                                            <StackPanel Orientation="Horizontal" Spacing="10">
                                                <Border Background="{Binding Priority, Converter={StaticResource PriorityColorConverter}}"
                                                       CornerRadius="3"
                                                       Padding="8,4">
                                                    <TextBlock Text="{Binding Priority}" 
                                                              Foreground="White"
                                                              FontWeight="SemiBold"
                                                              FontSize="12"/>
                                                </Border>
                                                <TextBlock Text="{Binding Action}" 
                                                          FontWeight="SemiBold"
                                                          FontSize="14"
                                                          VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <StackPanel Spacing="5">
                                                <TextBlock>
                                                    <Run Text="Reasoning: " FontWeight="SemiBold"/>
                                                    <Run Text="{Binding Reasoning}"/>
                                                </TextBlock>
                                                <TextBlock>
                                                    <Run Text="Context: " FontWeight="SemiBold"/>
                                                    <Run Text="{Binding Context}"/>
                                                </TextBlock>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl> 
                     </StackPanel> 
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Empty State -->
        <StackPanel Grid.Row="1"
                   IsVisible="{Binding Result, Converter={x:Static ObjectConverters.IsNull}}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Spacing="10">
            <TextBlock Text="No analysis results yet" 
                      FontSize="16" 
                      Foreground="Gray"
                      HorizontalAlignment="Center"/>
            <TextBlock Text="Select an image and click 'Analyze Screenshot' to begin" 
                      FontSize="12" 
                      Foreground="Gray"
                      HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>

